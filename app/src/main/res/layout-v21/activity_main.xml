<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
        <androidx.appcompat.widget.Toolbar
                android:id="@+id/logoss"
                app:title=" "
                android:layout_height="match_parent"
                android:layout_width="296dp">
            <TextView
                    android:text="@string/daftar"
                    android:gravity="center"
                    android:foregroundGravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/textView" android:textSize="18sp"
                    android:textStyle="bold" android:typeface="sans"/>

        </androidx.appcompat.widget.Toolbar>


    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="531dp"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:background="@color/white">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">

            <EditText
                    android:id="@+id/isinama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black"
                    android:ems="10"
                    android:hint="@string/name"
                    android:inputType="textPersonName"
                    android:outlineSpotShadowColor="@color/black"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

            <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black"
                    android:ems="10"
                    android:hint="@string/alamate"
                    android:inputType="textEmailAddress"
                    android:outlineSpotShadowColor="@color/black"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

            <EditText
                    android:id="@+id/savetelp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black"
                    android:ems="10"
                    android:hint="@string/notelp"
                    android:inputType="phone"
                    android:maxLength="15"
                    android:outlineSpotShadowColor="@color/black"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

            <EditText
                    android:id="@+id/almt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black"
                    android:ems="10"
                    android:hint="@string/alamat"
                    android:inputType="textMultiLine"
                    android:maxLength="50"
                    android:maxLines="2"
                    android:outlineSpotShadowColor="@color/black"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

            <EditText
                    android:id="@+id/savepass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black"
                    android:ems="10"
                    android:hint="@string/userpass"
                    android:inputType="textPassword"
                    android:outlineSpotShadowColor="@color/black"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

            <EditText
                    android:id="@+id/saveredu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black"
                    android:ems="10"
                    android:hint="@string/ulang"
                    android:inputType="textPassword"
                    android:outlineSpotShadowColor="@color/black"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

            <Button
                    android:id="@+id/Submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/upper"
                    android:gravity="center"
                    android:text="Submit"
                    android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>