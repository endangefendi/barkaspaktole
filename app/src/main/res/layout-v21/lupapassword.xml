<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
        <androidx.appcompat.widget.Toolbar
                android:id="@+id/mantap"
                app:title=" "
                android:layout_height="match_parent"
                android:layout_width="296dp">
            <TextView
                    android:text="@string/lupa2"
                    android:gravity="center"
                    android:foregroundGravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/textView" android:textSize="18sp"
                    android:textStyle="bold" android:typeface="sans"/>

        </androidx.appcompat.widget.Toolbar>


    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

        <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Masukan Email Untuk Mengganti Password"
                android:textColor="@color/blacked"
                android:textSize="18dp" />

        <EditText
                android:id="@+id/emailganti2"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:autofillHints=""
                android:backgroundTint="@color/black"
                android:ems="10"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:outlineSpotShadowColor="@color/black"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />

        <Button
                android:id="@+id/reset_submit2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/upper"
                android:text="@string/sub"
                android:textStyle="bold" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>