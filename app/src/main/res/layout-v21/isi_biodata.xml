<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_bggradient">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                    android:id="@+id/mukill"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    app:title=" ">

                <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:foregroundGravity="center"
                        android:gravity="center"
                        android:text="Edit Biodata"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:typeface="sans" />

            </androidx.appcompat.widget.Toolbar>


        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:layout_gravity="right"
                    android:text="Edit Profile Picture"
                    android:textColor="@color/blacked"
                    android:theme="@style/buttonstyle1" />

            <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="214dp"
                    android:layout_height="137dp"
                    android:layout_gravity="center" />

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="51dp"
                        android:gravity="center"
                        android:textColor="@color/blacked"
                        android:text="@string/name" />

                <TextView
                        android:textColor="@color/blacked"
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="51dp"
                        android:gravity="center"
                        android:text="@string/notelp" />

                <TextView
                        android:textColor="@color/blacked"
                        android:id="@+id/erikode"
                        android:layout_width="match_parent"
                        android:layout_height="77dp"
                        android:gravity="center"
                        android:text="@string/alamat" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <EditText
                        android:id="@+id/bionama"
                        android:layout_width="wrap_content"
                        android:layout_height="51dp"
                        android:backgroundTint="@color/black"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:outlineSpotShadowColor="@color/blacked"
                        android:text="edi"
                        android:textColor="@color/blacked" />

                <EditText
                        android:id="@+id/biohp"
                        android:layout_width="wrap_content"
                        android:layout_height="51dp"
                        android:backgroundTint="@color/black"
                        android:ems="10"
                        android:inputType="phone"
                        android:outlineSpotShadowColor="@color/blacked"
                        android:text="0890808"
                        android:textColor="@color/blacked" />

                <EditText
                        android:id="@+id/bioalamat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/black"
                        android:ems="10"
                        android:gravity="center|left"
                        android:inputType="textMultiLine"
                        android:maxLength="50"
                        android:maxLines="2"
                        android:outlineSpotShadowColor="@color/blacked"
                        android:text="Sawit Panggungharjo sewon Bantul Yogyakarta"
                        android:textColor="@color/blacked" />
            </LinearLayout>
        </LinearLayout>
        <Button
                android:theme="@style/buttonstyle1"
                android:text="Simpan"
                android:layout_gravity="center"
                android:layout_width="157dp"
                android:layout_height="65dp" android:id="@+id/simpancoyy"/>
    </LinearLayout>
</FrameLayout>
